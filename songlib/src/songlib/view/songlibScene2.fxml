<GridPane 
	xmlns="http://javafx.com/javafx/8"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="songlib.view.AddController"
	vgap="10" hgap="10">
	
    <Text text="song name" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="song_name" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               
    <Text text="artist" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="artist" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    
    <Text text="album" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="album" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    
    <Text text="year" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="year" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    
    <Button fx:id="add_new" Text="Add" GridPane.columnIndex="1" GridPane.rowIndex="5" onAction="#show_shadow" />
    <Button fx:id="Cancel" Text="Cancel" GridPane.columnIndex="0" GridPane.rowIndex="5" onAction="#show_shadow"/>
    
    
    <padding>
		<Insets top="10" right="10" bottom="10" left="10"/>
	</padding>
	
    
    
</GridPane>
